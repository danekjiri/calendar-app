<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10.0" vgap="10.0"
          xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cz.cuni.mff.danekji.calendar.client.gui.controllers.EventDialogController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="Title:"/>
    <Label text="Date:" GridPane.rowIndex="1"/>
    <Label text="Time (HH:MM):" GridPane.rowIndex="2"/>
    <Label text="Location:" GridPane.rowIndex="3"/>
    <Label text="Description:" GridPane.rowIndex="4"/>
    <TextField fx:id="titleField" GridPane.columnIndex="1"/>
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="timeField" promptText="e.g., 08:30" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>